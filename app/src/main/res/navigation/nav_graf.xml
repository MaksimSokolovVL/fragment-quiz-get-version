<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graf"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.fragmentquizgetversion.StartFragment"
        android:label="start_fragment"
        tools:layout="@layout/start_fragment" >
        <action
            android:id="@+id/action_startFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.fragmentquizgetversion.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" >
        <action
            android:id="@+id/action_questionFragment_to_resultQuiz"
            app:destination="@id/resultQuiz" />
    </fragment>
    <fragment
        android:id="@+id/resultQuiz"
        android:name="com.example.fragmentquizgetversion.ResultQuizFragment"
        android:label="fragment_result_quiz"
        tools:layout="@layout/fragment_result_quiz" >
        <action
            android:id="@+id/action_resultQuiz_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>