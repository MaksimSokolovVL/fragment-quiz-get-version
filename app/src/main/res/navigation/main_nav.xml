<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.fragmentquizgetversion.start.presentation.view.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>

    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.fragmentquizgetversion.question.presentation.view.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" >
        <action
            android:id="@+id/action_questionFragment_to_resultQuizFragment"
            app:destination="@id/resultQuizFragment"
            app:popUpTo="@id/questionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_questionFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/resultQuizFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/resultQuizFragment"
        android:name="com.example.fragmentquizgetversion.result.presentation.view.ResultQuizFragment"
        android:label="fragment_result_quiz"
        tools:layout="@layout/fragment_result_quiz" >
        <action
            android:id="@+id/action_resultQuizFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_resultQuizFragment_to_questionFragment"
            app:destination="@id/questionFragment"
            app:popUpTo="@id/resultQuizFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="resultQuizModel"
            app:argType="com.example.fragmentquizgetversion.result.presentation.viewmodel.ResultModel" />
    </fragment>
</navigation>